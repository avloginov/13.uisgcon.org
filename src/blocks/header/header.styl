.header
	&__menu
		float right
		margin-right 270px
	&_static
		padding 29px 0
		position absolute
		top 0
		left 0
		width 100%
		z-index 2
		.header__reg
		.header__language
			&:hover
				color #dca544
	&_fixed
	&_superfixed
		z-index 10
		position fixed
		top 0
		left 0
		// right 0
		// bottom 0
	&_main
		background-color lightGrey
		.header
			&__controls
				margin 0 0 0 35px
			&_static
				padding 19px 0
			&__menu
				margin-right 0
				.main-menu
					margin 9px 0
			&__reg
				padding 11px 29px
				color brandColor
			&__language
				color blueColor
	&__logo
		margin 10px 0
		float left
		text-decoration none
		&-img
			display block
		&-text
			color #fff
			font-size 14px
	&__reg
	&__language
		color #fff
	&__language
		font-size 18px
		font-weight 600
		display inline-block
		line-height 1
		margin-left 37px
		text-decoration none
	&__controls
		float right
		margin 14px 0
