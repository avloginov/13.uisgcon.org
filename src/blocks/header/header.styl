.header
	position absolute
	z-index 150
	left 0
	right 0
	height 80px
	padding-top 18px
	background-color lightGrey
	transform translate3d(0,0,0)
	&__tooltip
		float left
		position relative
		margin 11px 0 0 15px
		&:hover .header__tooltip-body
			display block
		&-icon
			display block
			width 20px
			height @width
			font-size 20px
			color #a4b5c6
		&-body
			display none
			position absolute
			top 100%
			left 50%
			width 216px
			margin-left -(@width / 2)
			margin-top 10px
			padding 15px 20px
			color blueColor
			font-size 16px
			line-height 1.4
			color blueColor
			background-color #fff
			border-radius 5px
			box-shadow 0 3px 5px rgba(16, 22, 30, 0.15)
			&:after
				content ""
				position absolute
				bottom 100%
				left 50%
				margin-left -10px
				width 0
				height 0
				border-width 10px
				border-style solid
				border-color transparent transparent #fff transparent
	&_static
		position relative
	&_fixed
		position fixed
		top 0
		box-shadow 0 0 5px rgba(0,0,0,.1)
	&__menu
		float right
		margin-top 7px
		@media sm
			margin-top 10px
		@media tablet
			display none
			position absolute
			top 100%
			right 0
			background-color #fff
	&__logo
		float left
		margin-top 4px
		text-decoration none
		&:before
			color #a4b5c6
			position absolute
			right -36px
			top 50%
			transform translateY(-50%)
		&-img
			display inline-block
			vertical-align middle
	&__language
		margin-left 35px
		display inline-block
		vertical-align middle
		font-size 18px
		color blueColor
		font-weight 600
		text-transform uppercase
		text-decoration none
		@media sm
			margin-left 20px
			font-size 16px
		&:hover
			color brandColor
	&__controls
		float right
		margin-left 30px
		@media sm
			margin-left 20px
	&__content
		float right
		@media phone
			display none
			position absolute
			top 100%
			right 0
			background-color #fff
	&__toggle
		display none
		float right
		margin-left 30px
		width 50px
		height @width
		background-color brandColor
		@media phone_tablet
			display block
