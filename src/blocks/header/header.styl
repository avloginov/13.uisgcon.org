.header
	&__menu
		float right
		margin-right 270px
	&_static
		padding 29px 0
		position absolute
		top 0
		left 0
		width 100%
		z-index 2
		.header__reg
		.header__language
			&:hover
				color #dca544
	&_fixed
		position fixed
		top 0
		left 0
		right 0
		bottom 0
	&__logo
		margin 10px 0
		float left
		text-decoration none
		&-img
			display block
		&-text
			color #fff
			font-size 14px
	&__reg
	&__language
		color #fff
	&__reg
		&:hover
			color #fff !important
	&__language
		font-size 18px
		font-weight 600
		display inline-block
		line-height 1
		margin-left 37px
		text-decoration none
	&__controls
		float right
		margin 14px 0
