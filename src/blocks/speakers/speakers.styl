.speakers
	padding 80px 0
	&__list
		margin 0 -10px
		padding 0
		list-style none
		text-align center
		@media phone
			overflow-x auto
			-webkit-overflow-scrolling touch
			white-space nowrap
		&-item
			width 32%
			padding 0 10px
			display inline-block
			vertical-align top
			margin-bottom 50px
			@media phone
				white-space normal
				width auto
	&__person
		display block
		margin 0 auto
		max-width 270px
		text-decoration none
		@media phone
			margin 0 auto
		&:hover
			.speakers__person-name
				color brandColor
		&-image
			display block
			width 200px
			height @width
			margin 0 auto 20px
			overflow hidden
			border-radius 100%
			fit-image()
			@media phone_tablet
				width 150px
				height 150px
		&-name
			display block
			margin-bottom 5px
			color siteColor
			font-size 22px
			transition color 0.2s ease
			@media phone_tablet
				font-size 18px


		&-position
			display block
			color #717171
			font-size 15px
			@media phone_tablet
				font-size 14px
	&__footer
		margin-top 80px
		text-align center
		@media tablet
			margin-top 40px
		@media phone
			margin-top 20px

			display block
	&__btn
		margin 0 30px 0 0
		@media phone
			display block
			margin 0 0 30px 0
		&:nth-child(n+2)
			margin 0
