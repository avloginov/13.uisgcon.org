.speakers
	padding 80px 0
	&__list
		list-style none
		margin 0
		padding 0
		text-align center
		&-item
			display inline-block
			margin-right 150px
			margin-bottom 50px
			@media sm
				margin-right 50px
			@media phone
				margin-right 0
				display block
			@media tablet
				margin-right 10px
			&:last-child
				margin-right 0
			&:nth-child(3)
				margin-right 0
			@media desktop
				&:nth-child(n+3)
					margin-bottom 0
	&__person
		max-width 270px
		@media phone
			margin 0 auto
		&-avatar
			display block
			max-width 100%
			margin 0 auto
			height auto
			border-radius 50%
		&-name
			color siteColor
			font-size 22px
			transition color 0.2s ease
			&:hover
				color brandColor
		&-position
			display block
			color #717171
			font-size 15px
		&-link
			display inline-block
			margin-top 15px
			text-decoration none
	&__footer
		margin-top 80px
		text-align center
		@media tablet
			margin-top 40px
		@media phone
			margin-top 20px
