.intro
	position relative
	background url("i/intro.jpg") no-repeat center
	background-size cover
	&__header
		position absolute
		z-index 2
		top 0
		left 0
		right 0
		padding-top 20px
	&__logo
		float left
		text-decoration none
		width 372px
		height 94px
		@media tablet
			width 270px
			height 68px
		&-img
			width 100% !important
			height auto !important
	&__controls
		float right
		margin-top 20px
		@media tablet
			margin-top 13px
	&__language
		display inline-block
		vertical-align middle
		margin-left 35px
		font-size 18px
		font-weight 600
		color #fff
		text-decoration none
		text-transform uppercase
		&:hover
			color brandColor
	&__content
		height 100vh
		min-height 800px
		text-align center
		&:after
			content ""
			display inline-block
			vertical-align middle
			width 0
			height 100%
		&-inner
			display inline-block
			vertical-align middle
			max-width 96%
	&__title
		color #fff
		font-size 58px
		font-weight 600
		margin-bottom 55px
		@media tablet
			font-size 48px
	&__info
		&-date-wrapper
			vertical-align inherit
			margin-left 14px
		&-location
			margin-bottom 10px
		&-icon
			display inline-block
			font-size 25px
			color #fff
		&-dates
		&-address
			color #fff
			font-size 22px
			font-style normal
			vertical-align text-bottom
		&-address
			display inline-block
			margin-left 10px
	&__arrow
		position absolute
		left 50%
		bottom 40px
		font-size 30px
		color #fff
		text-decoration none
		transition .2s color ease-in-out
		animation arrowFly 2s ease-in-out infinite
		&:hover
			color brandColor

@keyframes arrowFly
	0%
		transform translateY(0)
	50%
		transform translateY(10px)
	100%
		transform translateY(0)
