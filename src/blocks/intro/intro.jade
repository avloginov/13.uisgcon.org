+e.header
	.container
		+e("a").logo(href=site.baseUrl)
			+e("img").logo-img(src=site.logoBig, alt="" width="372" height="94")
		+e.controls
			+e("a").reg.btn.btn-sm.btn-white(href="/order")!= reg
			if language == "en"
				+e("a").language(href=site.baseUrl) Укр
			else
				+e("a").language(href="/en") Eng
.container
	+e.content
		+e.content-inner
			+e("h2").title!= title
			+e.info
				if location
					+e.info-location
						+e("span").info-icon.icon-marker
						+e("address").info-address!= location
				+e("span").info-dates
					if date
						+e("span").info-icon.icon-callendar
						+e.info-date-wrapper
							if language !== "en"
								if date.dateStart
									time.intro__info-date(datetime=date.dateStartShort)=date.dateStart
								if date.dateEnd
									| -
									time.intro__info-date(datetime=date.dateEndShort)= date.dateEnd
								if date.month
									|  #{date.month}
							else
								if date.month
									| #{date.month}
								if date.dateStart
									time.intro__info-date(datetime=date.dateStartShort)=date.dateStart
								if date.dateEnd
									| -
									time.intro__info-date(datetime=date.dateEndShort)= date.dateEnd
							if date.year
								|  #{date.year}
+e("a").arrow.icon-arrow-down.scroll-link(href=arrowUrl)
