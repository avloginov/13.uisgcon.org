.tickets
	padding 80px 0 90px
	background-color lightGrey
	&__list
		list-style none
		margin 0
		padding 0
		text-align center
		font-size 0
		&-item
			display inline-block
			vertical-align middle
			margin-right 1px
			&:last-child
				margin-right 0
	&__box
		background-color #fff
		width 308px
		height 410px
		padding 40px 25px
		&-title
			padding 0 0 40px
			display block
			font-size 19px
			font-weight 600
			text-transform uppercase
			color brandColor
		&-price
			display block
			font-size 80px
			font-weight 300
			padding-bottom 40px
			line-height 0.8
			color blueColor
			small
				color brandColor
				vertical-align top
				font-size 38px
				line-height 1
				padding-left 8px
		&-text
			display block
			color #8b8b8b
			font-size 16px
			padding-bottom 54px
		&-order
			padding 17px 91px
			border-radius 24px
			color siteColor
			background-color lightGrey
			font-size 18px
			border 2px solid transparent
			font-weight 600
			transition all 0.2s ease-in-out
			&.active
			&:not(.active):hover
				background-color brandColor
				color #fff
