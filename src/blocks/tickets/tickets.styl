.tickets
	padding 70px 0 140px
	background-color blueColor
	//background-color lightGrey
	@media phone
		padding 30px 0 60px
	&__title
		margin-bottom 80px
		color: white
	&__list
		margin 0
		padding 0
		list-style none
		text-align center
		clearfix()
		@media sm
			margin 0 auto
			width 80%
		@media phone
			max-width 300px
			margin 0 auto
		&-item
			float left
			width 25%
			border-right 1px solid #dfe2e5
			@media tablet_sm
				width 50%
				&:nth-child(even)
					border-right 0 none
			@media tablet_sm
				border-right-color lightGrey
				border-bottom 1px solid lightGrey
			@media phone
				float none
				width auto
				border-right 0 none
				border-bottom 1px solid #dfe2e5
				&:last-child
					border-bottom 0 none
			&:last-child
				border-right 0 none
	&__box
		height 350px
		padding 40px 30px
		background-color #fff
		&-wrap
			text-align center
		&-title
			margin-bottom 40px
			font-size 19px
			font-weight 600
			color brandColor
		&-price
			margin-bottom 40px
			font-size 80px
			line-height 1
			font-weight 300
			color blueColor
			sup
				margin-left 8px
				top -35px
				color brandColor
				font-size 38px
				line-height 1
		&-order
			display block
			width 100%
	&__text
		&-new
			color white
			text-align center
			padding 0 100px
			margin-bottom 70px
			@media phone
				padding 0 10px
