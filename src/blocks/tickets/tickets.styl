.tickets
	padding 80px 0
	background-color lightGrey
	&__list
		list-style none
		margin 0
		padding 0
		text-align center
		&-item
			display inline-block
			vertical-align middle
	&__box
		background-color #fff
		width 308px
		height 410px
		padding 40px 25px
		&-title
			padding 0 0 50px
			display block
			font-size 19px
			font-weight 600
			text-transform uppercase
			color brandColor
		&-price
			display block
			font-size 80px
			font-weight 300
			margin-bottom 40px
			line-height 1
			color blueColor
			small
				color brandColor
				vertical-align top
				font-size 38px
				line-height 1
		&-text
			display block
			color #8b8b8b
			font-size 16px
			margin-bottom 56px
		&-order
			padding 17px 96px
