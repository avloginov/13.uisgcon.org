.tickets
	padding 80px 0 90px
	background-color lightGrey
	&__list
		list-style none
		margin 0
		padding 0
		text-align center
		font-size 0
		clearfix()
		&-item
			height 350px
			width 25%
			// float left
			box-shadow 0 0 1px rgba(0,0,0,.2)
			display inline-block
			vertical-align middle
	&__box
		background-color #fff
		padding 40px 30px
		&-title
			padding 0 0 40px
			display block
			font-size 19px
			font-weight 600
			color brandColor
		&-price
			display block
			font-size 80px
			line-height 1
			font-weight 300
			margin-bottom 40px
			color blueColor
			sup
				top -35px
				color brandColor
				font-size 38px
				line-height 1
				margin-left 8px
		&-order
			display block
