.about
	padding 80px 0
	position relative
	.header
		background-color lightGrey
		&__controls
			margin 0 0 0 35px
		&_static
			padding 19px 0
		&__menu
			margin-right 0
			.main-menu
				margin 9px 0
		&__reg
			padding 11px 29px
			color brandColor
		&__language
			color blueColor
	&__title
		color blueColor
		font-size 58px
		font-weight 600
		margin 68px 0 64px
		text-align center
	&__features
		text-align center
		list-style none
		margin 0 0 66px
		padding 0
		font-size 0
		&-item
			display inline-block
			margin-right 134px
			&:last-child
				margin-right 0
		&-value
			font-size 50px
			font-weight 300
			color brandColor
			line-height 1
			margin-bottom 22px
			small
				font-size 22px
				font-weight 400
		&-label
			color blueColor
			font-size 18px
	&__text
		text-align center
		max-width 680px
		margin 0 auto
	&__footer
		text-align center
		margin-top 66px
