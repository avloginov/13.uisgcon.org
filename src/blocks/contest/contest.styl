.contest
	padding 80px 0 100px
	&__text
		text-align center
		max-width 600px
		margin 0 auto 30px
	&__gifts
		margin 0
		padding 0
		list-style none
		text-align center
		clearfix()
		&-item
			float left
			width 33.33%
			@media phone_tablet
				float none
				width auto
				display block
	&__gift
		@media phone_tablet
			margin-bottom 30px
		&-badge
			position absolute
			top 0
			left -15px
			display inline-block
			background-color #007ae3
			background-image linear-gradient(to top, #007ae3 0%, #45a4f5 100%)
			border-radius 50%
			height 70px
			width 70px
			// &_big
			// 	height 91px
			// 	width 91px
			// 	top 30%
			// 	.contest__gift-badge-value
			// 		font-size 60px
			&-value
				font-size 42px
				font-weight 600
				color #fff
				margin-top 5px
				line-height 0.9
				display inline-block
			&-label
				color #fff
				font-size 15px
				display block
				line-height 1.1
		&-image
			position relative
			width 250px
			height @width
			margin 0 auto
			fit-image()
		&-label
			font-size 22px
			color blueColor
			margin-top 8px
	&__footer
		margin-top 110px
		text-align center
		@media phone_tablet
			margin-top 70px
