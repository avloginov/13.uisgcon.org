.map
	position relative
	&__interactive
		height 663px
		width 100%
	&__info
		position absolute
		top 185px
		left 115px
		width 370px
		height 275px
		background-color #fff
		padding 40px
		box-shadow 0 3px 15px rgba(16, 22, 30, 0.15)
	&__title
		color blueColor
		font-size 40px
		font-weight 600
		margin-bottom 8px
	&__adress
	&__link
	&__times
		color siteColor
		font-size 18px
		position relative
		padding-left 35px
		&:before
			font-family "icons"
			position absolute
			top 0
			left 0
			color brandColor
			font-size 18px
	&__adress
	&__link
		display block
		margin-bottom 10px
	&__adress
		&:before
			content "\e900"
	&__times
		&:before
			content "\e906"
	&__link
		text-decoration none
		&:before
			content "\e905"
		&:hover
			text-decoration underline
