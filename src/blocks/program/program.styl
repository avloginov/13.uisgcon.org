.program
	background-color lightGrey
	padding 80px 0
	&__nav
		list-style none
		padding 0
		margin 0
		text-align center
		border 1px solid #e0e6ec
		&:after
			content ""
			display block
			clear both
		&-link
			display block
			text-decoration none
			padding 14px 0 11px
		&-item
			display inline-block
			width 50%
			height auto
			float left
			border-right 1px solid #e0e6ec
			background #fff
			transition background 0.2s ease
			&:last-child
				border-right 0
			&:hover
			&.active
				background blueColor
				.program__nav-title
					color #fff
				.program__nav-date
					color #badaf5
		&-title
			color blueColor
			font-size 30px
			font-weight 600
			@media phone
				font-size 20px
			@media (max-width: 400px )
				font-size 16px
		&-date
			color #9fa8b0
			font-size 13px
	&__tab
		&-pane
			border 1px solid #e0e6ec
			border-top 0
			background #fff
			display none
			&.active
				display block
			&:after
				content ""
				display block
				clear both
	&__column
		float left
		width (100% / 3)
		height auto
		border-right 1px solid #e0e6ec
		@media (max-width: mdWidth)
			cursor pointer
			width 100%
			border-right 0
			// border-bottom 1px solid #e0e6ec
			&:last-child
				border-bottom 0
			&.active
				.program
					//&__list
					//	display block
					&__icon
						&:after
							transform rotate(90deg)
		&:last-child
			border-right 0
		&-title
			position relative
			background lightGrey
			text-align center
			color blueColor
			padding 14px 0
			border-bottom 1px solid #e0e6ec
	&__icon
		position absolute
		top (59px/2 - 20px/2)
		left 20px
		width 20px
		height 20px
		@media (min-width: mdWidth + 1)
			display none
			&:before
			&:after
				content none
		&:before
		&:after
			content ""
			position absolute
			background-color #000
			transition 0.2s transform ease-in-out
		&:before
			top (20px / 2 - 2px / 2)
			left 1px
			right 1px
			height 2px
		&:after
			top 1px
			left (20px / 2 - 2px / 2)
			bottom 1px
			width 2px
	&__list
		list-style none
		padding 0
		margin 20px 20px
		@media (max-width: mdWidth)
			display none
		&-item
			margin-bottom 10px
			&:last-child
				margin-bottom 0
			&:after
				content ""
				display block
				clear both
			@media phone
				margin-bottom 15px
		&-date
			color brandColor
			font-weight 600
			float left
			width 18%
			padding-right 20px
			@media (max-width: mdWidth)
				width 70px
			@media phone
				padding-right 10px
				width 60px
		&-text
			color siteColor
			font-size 18px
			float right
			width 82%
			@media (max-width: mdWidth)
				width calc(100% - 70px)
			@media phone
				width calc(100% - 60px)
			span
				color blueColor
				font-weight 600
