.main-menu
	margin 0
	padding 0
	list-style none
	clearfix()
	&__item
		float left
		margin-right 25px
		@media sm
			margin-right 15px
		@media tablet
			float none
			margin-right 0
			text-align right
			border-bottom 1px solid lightGrey
		@media phone
			float none
			margin-right 0
		&:last-child
			margin-right 0
			border-bottom 0
		&-link
			position relative
			display block
			padding-bottom 5px
			font-size 18px
			color blueColor
			text-decoration none
			@media sm
				font-size 14px
			@media tablet
				padding-bottom 0
				margin 20px 28px
				&:after
					height 0
			@media phone
				padding-bottom 0
				&:after
					height 0
			&:after
				content ""
				position absolute
				bottom 0
				left 0
				right 0
				opacity 0
				height 2px
				background-color brandColor
				transition .2s opacity ease-in-out
			&.active
			&:hover
				color brandColor
				&:after
					opacity 1
