.main-menu
	margin 0
	padding 0
	list-style none
	clearfix()
	&__item
		float left
		margin-right 25px
		@media sm
			margin-right 15px
		@media phone_tablet
			float none
			margin-right 0
		@media tablet
			text-align right
			border-bottom 1px solid #e0e0e0
		@media phone
			margin 0 10px
			border-bottom 1px dotted #e0e0e0
		&:last-child
			margin-right 0
			@media phone_tablet
				border-bottom 0 none
		&-link
			position relative
			display block
			padding-bottom 5px
			font-size 18px
			color blueColor
			text-decoration none
			@media sm
				font-size 14px
			@media phone_tablet
				padding 20px 25px
				&:after
					content none
			&:after
				content ""
				position absolute
				bottom 0
				left 0
				right 0
				opacity 0
				height 2px
				background-color brandColor
				transition .2s opacity ease-in-out
			&.active
			&:hover
				color brandColor
				&:after
					opacity 1
