.news
	padding 80px 0
	.container
		border-top 2px solid lightGrey
	&__list
		display block
		max-width 815px
		margin 0 auto
		list-style none
		padding 0
		&-item
			display block
			margin-bottom 10px
			&:last-child
				margin-bottom 0
	&__date
		font-size 18px
		color brandColor
		text-align left
		display inline-block
		margin-right 25px
	&__text
		font-size 18px
		color blueColor
		text-align left
		text-decoration none
		transition color 0.2s ease
		&:hover
			color #dca544
		&-wrapper
			vertical-align top
			max-width 675px
			display inline-block
	&__footer
		margin-top 75px
		text-align center
