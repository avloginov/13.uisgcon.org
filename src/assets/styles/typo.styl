h1, h2, h3, h4, h5, h6
	font-weight 600

h1
	font-size (58/bfont)em
	margin 0 0 (20/bfont)em
h2
	font-size 28px
	margin 0 0 20px
h3
	font-size 21px
	margin 0 0 15px
h4
	font-size 18px
	margin 0 0 15px
h5
	font-size 16px
	margin 0 0 15px
h6
	font-size 14px
	margin 0 0 15px

p
	margin 0 0 20px

a
	transition .15s color ease-in-out
	&:focus
		outline none

small
	font-size 75%

code
	font-family Menlo, Monaco, Consolas, "Courier New", monospace
	padding 3px 5px
	font-size 80%
	color siteColor
	background-color #ffebee
	border-radius 2px

hr
	margin 30px 0
	border-width 0 0 2px
	border-style solid
	border-color #f2f5f8
