.btn
	display inline-block
	vertical-align middle
	padding 11px 30px 12px
	border 2px solid brandColor
	border-radius 100px
	font-family mainFont
	font-size 18px
	line-height 1.3
	color brandColor
	font-weight 600
	text-align center
	white-space nowrap
	background none
	cursor pointer
	outline none
	user-select none
	transition .15s background ease-in-out, .15s color ease-in-out, .15s box-shadow ease-in-out
	&:hover
	&:active
		background brandColor
		color #fff
	&:active
		box-shadow 0 3px 7px rgba(0,0,0,0.5) inset
	&:focus
		outline none
	a&
		text-decoration none
	&.disabled
	&[disabled]
		cursor not-allowed
		opacity .5
		pointer-events none
	&-sm
		padding-top 7px
		padding-bottom 8px