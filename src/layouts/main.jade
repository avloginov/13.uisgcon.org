extends root

block root
	+b("header").header.header_static: +i({ logoBig: site.logotypeBig, logoAlt: site.logotypeAlt, logoLabel: site.logotypeLabel, controls: site.controls })

	main.main
		block main
			!= content

	+b("footer").footer: +i({ dev: file.footer.dev, owner: file.footer.owner, location: site.location, date: site.date, socials: site.socials })

block fonts
	link(href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600&subset=cyrillic" rel="stylesheet")

block styles
	link(rel="stylesheet", href=asset("uisgcon.min.css"))

block scripts
	script(src=asset("jquery-1.11.0.min.js") defer)
	script(src=asset("uisgcon.min.js") defer)

