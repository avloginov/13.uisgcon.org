extends root

block root
	h1.sr-only= site.title
	if file.intro
		+b("section").intro#intro: +i({
			title: file.intro.title,
			location: site.location,
			date: site.date,
			arrowUrl: file.intro.arrowUrl
		})
	+b("header").header#header: +i

	main.main
		block main
			!= content

	+b("footer").footer: +i

	if file.showModals
		+b.modals: +i({ list: speakers })

block fonts
	link(href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600&subset=cyrillic" rel="stylesheet")

block styles
	link(rel="stylesheet", href=asset("uisgcon.min.css"))

block scripts
	script(src=asset("jquery-1.11.0.min.js") defer)
	script(src=asset("uisgcon.min.js") defer)

